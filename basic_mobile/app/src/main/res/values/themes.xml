<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Basic_mobile" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Basic_mobile" parent="Base.Theme.Basic_mobile" />

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Splash">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- text button -->
    <style name="AppTheme.Button">
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.Button.SmallIcon">
        <item name="android:foreground">@drawable/selector_btn_ripple_round</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">false</item>
    </style>

    <style name="AppTheme.Button.SmallIcon.titleBar">
        <item name="android:foreground">@drawable/selector_btn_ripple_round</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">false</item>
    </style>

    <style name="AppTheme.Button.SmallIcon.menu">
        <item name="android:foreground">@drawable/selector_btn_ripple_round</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">false</item>
    </style>

    <!-- text view -->
    <style name="AppTheme.Text">
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <!--<item name="android:fontFamily">@font/nanum_square_round_r</item>-->
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.Text.Title">
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">100</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/font_top_title</item>
    </style>

</resources>